<p style="color: green"><%= notice %></p>

<%= render @comment %>

<div>

  <% if can? :manage, @comment %>
  <%= link_to "Edit this comment", edit_comment_path(@comment), class: "smallButton" %> |
  <%= link_to "Back to comments", comments_path %>

  <%= button_to "Destroy this comment", @comment, method: :delete, class: "smallButton" %>
  <% end%>
</div>
