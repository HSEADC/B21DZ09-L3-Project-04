<section class="container">
  <p style="color: green"><%= notice %></p>
  <div class="title">
    <h1>Задания</h1>
    <%= link_to "Новое задание", new_admin_task_path, class: "button" %>
  </div>
  <div id="tasks">
    <% @tasks.each do |task| %>
      <%= link_to [:admin, task], class: 'taskCard' do %>
        <%= render task %>
      <% end %>
    <% end %>
  </div>
</section>
