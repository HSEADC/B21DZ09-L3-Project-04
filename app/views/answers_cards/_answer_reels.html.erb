<div class="O_AnswerReelsCard">
  <%= image_tag answer.answer_image.large.url, class: "Q_AnswerImage large" if answer.answer_image.large.url %>

  <div class="C_TaskCircles">
    <div class="A_Ava medium">
      <%= image_tag answer.user.avatar_image.medium.url, class: "Q_Ava" if answer.user.avatar_image.medium.url %>
    </div>
    <div class="A_TaskType">
      <%= @task.type[0]%>
    </div>
  </div>

  <div class="W_RightPart">

    <%= render 'answers/like_button', answer: answer%>

    <div class="A_ButtonsTape comment">
      <div class="Q_Icon comment"></div>
      <p class="Q_Count"><%=answer.comments.count%></p>
    </div>
    <div class="A_ButtonsTape">
      <div class="Q_Icon share"></div>
    </div>
    <div class="A_ButtonMore"></div>
  </div>

  <div class="M_AnswerOptions hidden">
    <% if can? :manage, answer %>
      <%= link_to "Редактировать", edit_task_answer_path(answer.task, answer), class:"A_Option" %>
      <%= button_to "Удалить", task_answer_path(answer.task, answer), method: :delete, class:"A_Option" %>
    <% else %>
      <%= link_to "Пожаловаться", support_path(), class:"A_Option" %>
    <% end %>
  </div>

  <div class="O_Comments"> 
     <div class="Q_Rect first"></div>
     <div class="Q_Rect second"></div>
     <div class="M_Comments"> 
      <div class="W_TopLine">
        <div class="A_CommentsTitle">
          <h2>комментарии</h2>
          <div class="Q_Circle"> 
            <%=answer.comments.count%>
          </div>
        </div>
        <div class="A_Close"></div>
      </div>
      <div class="W_Comments">
      <div class="C_Comments" id="C_Comments"> 
        <%= render answer.comments, answer: answer %>
      </div>
      <% if user_signed_in? %>
        <%= render "comments/form", answer: answer, comment: Comment.new, url: @url %>
      <% end %>
     </div>
     </div>
  </div>
</div>