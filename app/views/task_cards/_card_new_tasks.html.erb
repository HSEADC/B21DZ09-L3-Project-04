<div class="O_CardNewTask">
  <div class="C_TaskAnswers">
    <%task.answers.each do |answer| %>
    <%= render 'answers_cards/answer_avatar_only', answer: answer%>
    <% end %>
  </div>
  <div class="O_TaskWithButtons">
    <%= image_tag task.first_answer_image.large.url, class: "Q_TaskImage" if task.first_answer_image.large.url %>
      <%= render 'task_cards/task_circles', task: task %>
    <div class="W_Buttons">
      <%= link_to "смотреть ответы", task_path(task), class: "M_Button m secondary" %>
      <%= link_to "загрузить находку", task_path(task), class: "M_Button m primary" %>
    </div>
      <%= render 'task_cards/task_title', task: task%>
  </div>
</div>
